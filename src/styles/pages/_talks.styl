.home, .talks
    margin-top 125px

    > .list
        border-top 1px solid epsilon
        margin-top 30px
        padding-top 40px
        position relative

        &:before
            display block
            content " "
            width 7px
            height 7px
            border epsilon 1px solid
            position absolute
            top -5px
            left 50%
            margin-left -5px
            background #FFF
            box-shadow #FFF 0 0 0 5px
            border-radius 3px

.talks > .list
    > .item
        display block
        width 95%
        margin -40px auto -10px

    > .item > .url
        width 100%
        display block
        padding 20px 0 10px
        text-decoration none

    > .item > .event
        font-size 1.5rem
        font-weight 300
        color #b9b9b9
        font-family "Helvetica Neue"
    > .item > .url > .title
        margin 0
        width 75%
        font-weight 500
        transition all ease-in-out .2s

    > .item:hover > .url > .title
        color delta

    // maybe we can't nest html5 elements
    // can you help me?
    aside
        position relative
        top 2px
        margin 0
        width 25%
        float right
        font-weight 300
        color gama
        text-align right
        transition all ease-in-out .2s

    .item:hover .url aside
        color alpha

.talks > .list > .item > .url
    > .title
        display inline

    > .emoji
        display inline
        position relative
        top -4px
        margin-right 10px
